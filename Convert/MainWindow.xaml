<Window x:Class="Convert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Convert"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tb1" Grid.Row="0" Height="20" Margin="10" TextWrapping="Wrap"  />
        <TextBox x:Name="tb2" Grid.Row="2" Height="20" Margin="10" TextWrapping="Wrap"  />
        <TextBox x:Name="tb3" Grid.Row="4" Height="20" Margin="10" TextWrapping="Wrap"  />
        <Button x:Name="btn1" Grid.Row="6" Height="20" Content="Add" Click="btn1_Click"/>
    </Grid>
    
</Window>
