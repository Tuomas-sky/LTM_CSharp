<Window x:Class="WPF_Story_08_3_TemplateInternalAccess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Story_08_3_TemplateInternalAccess"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <!--<StackPanel>
        <UserControl x:Name="uc" Template="{StaticResource CT1}" Margin="10"/>
        <Button Content="Show" Width="120" Height="30" Click="Button_Click"/>
    </StackPanel>-->

    <Grid Margin="10">
        <ListView x:Name="listViewEmp"
                  SelectionChanged="listViewEmp_SelectionChanged"
                  ItemsSource="{StaticResource Employees}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID"
                                    DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Information"
                                    CellTemplate="{StaticResource EmployeeTemplate}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
    
</Window>
