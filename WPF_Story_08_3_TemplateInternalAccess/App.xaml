<Application x:Class="WPF_Story_08_3_TemplateInternalAccess.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:System.Collections;assembly=mscorlib"
             xmlns:local="clr-namespace:WPF_Story_08_3_TemplateInternalAccess"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--ControlTemplate-->
        <!--<ControlTemplate x:Key="CT1">
            <StackPanel Background="Orange">
                <TextBox x:Name="textBox"
                         Margin="10"/>
                <Slider x:Name="slider" Maximum="10" Minimum="0" Margin="6,0"/>
                <TextBlock x:Name="textBolck" Margin="6"/>
            </StackPanel>
        </ControlTemplate>-->

        <!--DataTemplate-->
        <c:ArrayList x:Key="Employees">
            <local:Person Id="1"
                          Name="Tom"
                          Job="WPF"
                          Birthday="1994.10.22"/>
            <local:Person Id="2"
                          Name="Amy"
                          Job="ASP.NET"
                          Birthday="1996.12.07" />
            <local:Person Id="3"
                          Name="Jack"
                          Job="Java"
                          Birthday="1998.03.12" />
            <local:Person Id="4"
                          Name="King"
                          Job="SQL"
                          Birthday="2002.06.22" />
        </c:ArrayList>

        <DataTemplate x:Key="EmployeeTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="textBlock_Name"
                           Margin="10,0,0,0"
                           Text="{Binding Name}"
                           FontWeight="Bold"/>
                <TextBox x:Name="textBox_Job"
                         Text="{Binding Job}"
                         Margin="10,0,0,0"/>
                <TextBlock x:Name="textBlock_Birthday"
                           Text="{Binding Birthday}"
                           Foreground="Transparent"
                           Width="0"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </DataTemplate>
         
    </Application.Resources>
</Application>
