    <Application.Resources>
        <local:NameToLogoConverter x:Key="N2L"/>
        <local:NameToPhotoConverter x:Key="N2P"/>
        <DataTemplate x:Key="UniversityDisplayViewTemplate">
            <Border BorderBrush="Black" 
                    BorderThickness="1"
                    Width="450"
                    CornerRadius="6">
                <StackPanel Margin="5">
                    <Image x:Name="image_Photo"
                           Source="{Binding Name,Converter={StaticResource N2P}}"
                           Margin="0,0,0,15"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="5,0">
                        <TextBlock Text="Name:"
                                   FontFamily="Arial"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="textBlock_Name"
                                   Text="{Binding Name}"
                                   FontSize="20"
                                   FontFamily="Arial"
                                   Margin="5,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="5,0">
                        <TextBlock Text="Sketch:"
                                   FontFamily="Arial"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="textBlock_Sketch"
                                   Text="{Binding Sketch}"
                                   FontFamily="Arial"
                                   Margin="5,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5,0">
                        <TextBlock Text="Country:"
                                   FontFamily="Arial"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="textBlock_Country"
                                   FontFamily="Arial"
                                   Text="{Binding Country}"
                                   Margin="5,0"/>
                        <TextBlock Text="Established:"
                                   FontFamily="Arial"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="textBlock_Established"
                                   FontFamily="Arial"
                                   Text="{Binding Established}"
                                   Margin="5,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="UniversityListViewTemplate">
            <Grid Margin="2">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding Name,Converter={StaticResource N2L}}"
                           Grid.RowSpan="3"
                           Width="64"
                           Height="64"/>
                    <StackPanel Margin="5,10">
                        <TextBlock Text="{Binding Name}"
                                   FontSize="16"
                                   FontFamily="Arial"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Established}"
                                   FontSize="14"
                                   FontFamily="Arial"
                                   Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
        </DataTemplate>

    </Application.Resources>
    
